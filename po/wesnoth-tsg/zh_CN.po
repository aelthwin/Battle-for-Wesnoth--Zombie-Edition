msgid "The Long March"
msgstr "远征"

#. [side]
#: data/campaigns/The_South_Guard/scenarios/06b_The_Long_March.cfg:99
msgid "Elves"
msgstr "精灵"

#. [event]
#: data/campaigns/The_South_Guard/scenarios/06b_The_Long_March.cfg:315
